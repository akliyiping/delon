{
  "extends": "../tsconfig-build.json",

  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@tigers/theme": ["../../packages-dist/theme"],
      "@tigers/acl": ["../../packages-dist/acl"]
    },
    "outDir": "../../@tigers/auth"
  },

  "files": ["public_api.ts"],

  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@tigers/auth"
  }
}
