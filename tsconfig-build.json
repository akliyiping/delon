{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es7", "dom"],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./dist/@tigers",
    "rootDir": "./dist/packages",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true,
    "stripInternal": true,
    "baseUrl": ".",
    "paths": {
      "@tigers/theme": ["./dist/packages/theme"],
      "@tigers/abc": ["./dist/packages/abc"],
      "@tigers/acl": ["./dist/packages/acl"],
      "@tigers/util": ["./dist/packages/util"]
    },
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./dist/packages/**/*"],
  "files": ["./src/typings.d.ts"],
  "exclude": ["./dist/packages/**/*.e2e.ts", "./dist/packages/**/*.spec.ts"],
  "angularCompilerOptions": {
    "preserveWhiteSpace": false,
    "annotateForClosureCompiler": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": false
  }
}
